@using RunGroupWebApp.Models
@model Club


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="main-container">
    <section class="bg-white space-sm">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 mb-4 mb-sm-0">
                    <img alt="Image" src="@Model.Image" class="rounded img-fluid" />
                </div>
                <!--end of col-->
                <div class="col-lg-4 d-flex flex-column justify-content-between mr-auto ml-auto">
                    <div>
                        <h3 class="mb-2">@Model.Title</h3>
                        <p>@Model.Description</p>
                        <h3 class="m-3">Location</h3>
                        <ul>
                            <li>@Model.Address.City</li>
                            <li>@Model.Address.Town</li>
                            <li>@Model.Address.Street</li>
                        </ul>
                        <div>
                            <span class="badge badge-secondary mr-3">@Model.ClubCategory</span>
                        </div>
                    </div>
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
</div>
